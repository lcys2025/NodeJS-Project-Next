<link rel="stylesheet" href="/index/style.css">
<link rel="stylesheet" href="/booking/booking.css">
<div class="booking-container">
<%- include('_partials/nav') %>
  <h2>Book a Training Session</h2>
  <form id="bookingForm" class="booking-form">
    <input type="hidden" id="userId" value="<%= user._id %>">
    <input type="hidden" id="userId" value="<%= user.id %>">
    
    <div class="form-group">
      <label for="trainerSelect">Trainer</label>
      <select id="trainerSelect" required>
        <option value="">Select a trainer</option>
        <% trainers.forEach(trainer => { %>
          <option value="<%= trainer._id %>" <%= trainer._id.toString() === selectedTrainerId ? 'selected' : '' %>><%= trainer.name %></option>
        <% }); %>
      </select>
    </div>
    
    <div class="form-group">
      <label>Selected Date</label>
      <div id="selectedDate" class="selected-date-display">No date selected</div>
    </div>
    
    <div class="form-group full-width">
      <label>Select Date</label>
      <div class="month-navigation">
        <button type="button" id="prevMonth">← Previous</button>
        <div id="monthDisplay"></div>
        <button type="button" id="nextMonth">Next →</button>
      </div>
      <div id="calendar" class="calendar"></div>
    </div>
    
    <div class="form-group">
      <label for="sessionType">Session Type</label>
      <select id="sessionType" required>
        <option value="personal">Personal Training</option>
        <option value="group">Group Session</option>
        <option value="couple">Couple Training</option>
        <option value="rehabilitation">Rehabilitation</option>
        <option value="other">Other</option>
      </select>
    </div>
    
    <div class="form-group full-width">
      <label for="notes">Additional Notes</label>
      <textarea id="notes" rows="3"></textarea>
    </div>
    
    <button type="submit">Book Session</button>
  </form>
</div>

<link rel="stylesheet" href="/booking/booking.css">
<script src="/booking/booking.js"></script>